= form_with(model: site, local: true, class: "form-group") do |form|
  - if site.errors.any?
    #error_explanation
      %h2
        = pluralize(site.errors.count, "error")
        prohibited this site from being saved:
      %ul
        - site.errors.full_messages.each do |message|
          %li= message

  .form-group
    %label{:for => "title"} Title
    = form.text_field :title, placeholder: "title", class: "form-control"
  .form-group
    %label{:for => "url"} URL
    = form.text_field :url, placeholder: "URL", class: "form-control", id: :url
  .form-group
    %label{:for => "css_selector"} CSS Selector
    = form.text_field :css_selector, placeholder: "CSS Selector", class: "form-control", id: :css_selector
  .actions
    %button{onclick: "preview(); return false;", class: "btn btn-primary"} Preview
    = form.submit(class: "btn btn-primary")

